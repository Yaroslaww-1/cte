{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@data/*": ["src/data/*"],
      "@core/*": ["src/core/*"],
      "@shared/*": ["../cte-shared/*"] 
    },
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
