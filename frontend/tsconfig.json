{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@src/*": ["src/*"],
      "@api/*": ["src/api/services/*"],
      "@shared/*": ["../cte-shared/*"],
      "@shared-frontend/*": ["src/shared-frontend/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
